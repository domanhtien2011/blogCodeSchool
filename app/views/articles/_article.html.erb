<div class="row">
  <div class="col-sm-8">
    <% @articles.each do |article| %>
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><%= article.title %></h4>
          <small><%= article.created_at.strftime("%B, %d, %Y")  %></small>
          <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
          <small>Submitted <%= time_ago_in_words(article.created_at) %> ago</small>
        </div>
        <div class="card-footer">
          <%= link_to 'Edit', edit_article_url(article), class: "btn btn-primary" %>
          <%= link_to 'Delete', article_url(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
