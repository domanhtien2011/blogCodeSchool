<h2 align="center">
  <strong>Title:</strong>
  <%= @article.title %>
  </h2>

<div class="card col-sm-8 col-sm-offset-2">
    <h4 class="text-sm-center content">
    <strong>Content:</strong></h4>
    <hr>
    <%= simple_format(@article.body) %>
    <div class="article-actions text-sm-right">
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-sm btn-primary" %>
      <%= link_to 'Delete', article_url(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "btn btn-sm btn-danger" %>
      <%= link_to 'View All Articles', articles_path, class: "btn btn-sm btn-success" %>
    </div>
</div>


