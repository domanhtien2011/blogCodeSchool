<h1 align="center" class="body-padding">My First Rails Application for CoderSchool</h1>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= form_tag(articles_path, :id => 'custom-search-input', class: "input-group ",role: "search", method: :get) do %>
      <%= text_field_tag :search, params[:search], class: "search-query form-control" %>
      <span class="input-group-btn">
        <%= button_tag( :class => "btn btn-danger") do %>
          <span class="fa fa-search"></span>
        <% end %>
      </span>
    <% end %>
  </div>
</div>
<%= render 'article' %>

