<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-sm-12">
    <%= simple_form_for(@article, :html => { class: "form-horizontal", role: "form", multipart: true }) do |f| %>
      <div class="form-group row">
        <div class="form-control-label col-sm-3">
          <%= f.label :title %>
        </div>
        <div class="col-sm-9">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article...", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-control-label col-sm-3">
          <%= f.label :tag_list, "Tags (separated by commas)" %>
        </div>
        <div class="col-sm-9">
          <%= f.text_field :tag_list, class: "form-control", placeholder: "Tags, tags, tag..." %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-control-label col-sm-3">
          <%= f.label :body %>
        </div>
        <div class="col-sm-9">
          <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Content of the article..." %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-control-label col-sm-3">
          <%= f.label :picture %>
        </div>
        <div class="col-sm-9">
          <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-5 col-sm-offset-5">
      [ <%= link_to "Cancel request and return to articles listing", articles_url %> ]
    </div>
  </div>
</div>

<script type="text/javascript">
$('#article_picture').bind('change', function() {
  size_in_megabytes = this.files[0].size/1024/1024;
  if (size_in_megabytes > 5) {
    alert('Maximum file size is 5MB. Please choose a smaller file');
  }
});
</script>
