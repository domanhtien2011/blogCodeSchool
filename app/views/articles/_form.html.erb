<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="form-control-label col-sm-3">
          <%= f.label :title %>
        </div>
        <div class="col-sm-9">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article...", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-control-label col-sm-3">
          <%= f.label :body %>
        </div>
        <div class="col-sm-9">
          <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Content of the article..." %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-5 col-sm-offset-5">
      [ <%= link_to "Cancel request and return to articles listing", articles_url %> ]
    </div>
  </div>
</div>
